// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//   MODELOS


model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  role      String    // "CUIDADOR" | "MAESTRO"
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  criaturas Creature[]
}

model Creature {
  id         String   @id @default(uuid())
  nombre     String
  tipo       String   // "DRAGON" | "FENIX" | ...
  nivelPoder String
  entrenada  Boolean  @default(false)

  userId String
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
