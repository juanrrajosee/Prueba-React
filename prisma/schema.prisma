// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}


// ===============================
//   ENUMS
// ===============================

enum Role {
  CUIDADOR
  MAESTRO
}

enum TipoCriatura {
  DRAGON
  FENIX
  GOLEM
  VAMPIRO
  UNICORNIO
}

// ===============================
//   MODELOS
// ===============================

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  role      Role
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  criaturas Creature[]
}

model Creature {
  id         String       @id @default(uuid())
  nombre     String
  tipo       TipoCriatura
  nivelPoder String
  entrenada  Boolean      @default(false)

  userId String
  user   User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
